                </AppBarElementContainer>

                мб потом допилю

            </CommandBar.SecondaryCommands>-->
            <AppBarButton
                x:Name="SaveShitBtn"
                Click="SaveShitBtn_Click"
                Icon="Save"
                Label="Save" />
            <AppBarButton
                x:Name="OpenShitBtn"
                Click="OpenShitBtn_Click"
                Icon="OpenFile"
                Label="Open" />
        </CommandBar>
        <CommandBar
            HorizontalAlignment="Right"
            Background="Transparent"
            DefaultLabelPosition="Collapsed"
            IsSticky="True">
            <CommandBar.Content>
                <ComboBox
                    x:Name="PointsSelector"
                    Height="40"
                    ItemsSource="{x:Bind points}"
                    SelectionChanged="PointsSelector_SelectionChanged" />
            </CommandBar.Content>
            <AppBarButton
                x:Name="ItalianoTextBtn"
                Click="ItalianoTextBtn_Click"
                Icon="Italic" />
            <AppBarButton
                x:Name="BoldTextBtn"
                Click="BoldTextBtn_Click"
                Icon="Bold" />
        </CommandBar>
        <RichEditBox
            x:Name="ShitEditor"
            Grid.Row="1"
            BorderThickness="1">
            <RichEditBox.SelectionFlyout>
                <Flyout />
            </RichEditBox.SelectionFlyout>
        </RichEditBox>
    </Grid>
</Page>
